<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rond"
        android:backgroundTint="@color/senderColor"
        android:padding="10dp"
        android:id="@+id/left_chat_layout"
        android:layout_marginEnd="80dp">
        <TextView
            android:id="@+id/receiverMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rond"
        android:layout_alignParentEnd="true"
        android:id="@+id/right_chat_layout"
        android:backgroundTint="@color/receiverColor"
        android:padding="10dp"
        android:layout_marginStart="80dp">
        <TextView
            android:id="@+id/senderMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"/>
    </LinearLayout>

</RelativeLayout>